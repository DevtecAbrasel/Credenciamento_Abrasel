{
  "name": "credenciamento-backend",
  "version": "0.0.1",
  "description": "Backend para o site de credenciamento da Abrasel",
  "main": "server.js",
  "type": "module",
  "private": true,
  "exports": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "sideEffects": "false",
  "files": [
    "./dist"
  ],
  "engines": {
    "node": "^20.9.0",
    "npm": "^10.1.0"
  },
  "config": {
    "node": {
      "default": "--import ./lib/register-ts-node-esm.mjs"
    },
    "nodemon": {
      "default": "--delay 1500ms -e \"ts,json\" --watch \"src/**\" --exec \"node %npm_package_config_node_default%\""
    },
    "baseDir": "src"
  },
  "scripts": {
    "start": "set ENVIRONMENT=production && node ./dist/server.js",
    "dev": "set ENVIRONMENT=development && nodemon %npm_package_config_nodemon_default% src/server.ts",
    "dev:debug": "set ENVIRONMENT=development && nodemon --inspect=127.0.0.1:9229 %npm_package_config_nodemon_default% src/server.ts",
    "dev:node": "set ENVIRONMENT=development && node %npm_package_config_node_default% src/server.ts",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "credenciamento",
    "abrasel",
    "eventos"
  ],
  "author": "lucassmcardoso",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/nodemon": "^1.19.6",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cls-hooked": "^4.3.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/sequelize": "^4.28.19",
    "bcrypt": "^5.1.1",
    "chalk": "^5.3.0",
    "cls-hooked": "^4.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.4",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemon": "^3.0.1",
    "sequelize": "^6.35.1",
    "sqlite3": "^5.1.6"
  },
  "imports": {
    "#config/*": "./src/config/*",
    "#constants/*": "./src/constants/*",
    "#databases/*": "./src/databases/*",
    "#interfaces/*": "./src/interfaces/*",
    "#middlewares/*": "./src/middlewares/*",
    "#models/*": "./src/models/*",
    "#routes/*": "./src/routes/*",
    "#services/*": "./src/services/*",
    "#utils/*": "./src/utils/*"
  }
}
